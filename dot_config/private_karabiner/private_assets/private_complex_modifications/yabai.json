        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": [
                "left_shift", "left_option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "zsh -c 'yabai -m query --spaces --space | jq -r .type | xargs -I{} echo $(test {} = bsp && echo float || echo bsp) | xargs -I{} yabai -m space --layout {}'"
            }
          ]
        }
      ]
