{
  "title": "yabai shortcuts",
  "rules": [
    {
      "description": "yabai shortcuts",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "left_shift", "left_option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "zsh -c 'yabai -m window --focus west || yabai -m display --focus west'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_shift", "left_option"
              ],
              "optional": [
